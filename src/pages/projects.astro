---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const projects = (await getCollection("projects")).sort((a, b) => {
  return (
    Date.parse(b.data.date.toDateString()) -
    Date.parse(a.data.date.toDateString())
  );
});
---

<Layout title="Projects | Kabeer Arora">
  <main class="w-full h-[70vh]">
    <section class="flex flex-col items-center justify-center w-full h-full">
      <h1 class="text-4xl font-bold">Projects</h1>
      <p class="text-lg mt-4">Coming Soon...</p>
    </section>
  </main>
</Layout>
